{
  "_comment": "=== ROOT backend/package.json ===",
  "name": "elearning-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "local": "npm run local:services && npm run local:api",
    "local:services": "cd local && docker compose up -d",
    "local:services:stop": "cd local && docker compose down",
    "local:api": "serverless offline start --stage local",
    "init:local": "ts-node local/init-db.ts",
    "seed:local": "ts-node scripts/seed-data.ts local",
    "seed:preprod": "ts-node scripts/seed-data.ts preprod",
    "deploy:preprod": "./scripts/deploy-preprod.sh",
    "deploy:prod": "./scripts/deploy-prod.sh",
    "build": "tsc",
    "build:lambdas": "npm run build --workspaces",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\""
  },
  "workspaces": [
    "lambda/courses/create",
    "lambda/courses/update",
    "lambda/courses/get",
    "lambda/courses/list",
    "lambda/courses/delete",
    "lambda/lessons/create",
    "lambda/lessons/update",
    "lambda/lessons/reorder",
    "lambda/lessons/delete",
    "lambda/enrollment/enroll",
    "lambda/enrollment/unenroll",
    "lambda/progress/update",
    "lambda/progress/get",
    "lambda/uploads/presigned-url"
  ],
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "serverless": "^3.40.0",
    "serverless-esbuild": "^1.56.1",
    "serverless-offline": "^13.9.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.490.0",
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "aws-lambda": "^1.0.7",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "uuid": "^9.0.1"
  }
}
